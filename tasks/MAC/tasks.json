{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "BUILD",
            "command": "/usr/bin/clang++",
            "args": [
                "-I${fileDirname}/../cnum_examples/include",
                "-I${fileDirname}/../cnum_examples/eigen3",
                "-g",
                "${file}",
                "${fileDirname}/../cnum_examples/src/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "ENABLE",
            "command": "chmod 755 \"${fileDirname}/${fileBasenameNoExtension}\"",
            "options": {
                "cwd": "${relativeFileDirname}"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "type": "shell",
            "dependsOn": [
                "ENABLE"
            ],
            "dependsOrder": "sequence",
            "label": "RUN",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "options": {
                "cwd": "${relativeFileDirname}"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "STARTPROMPT",
            "command": "echo -e '============= BUILD START =============='",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "ENDPROMPT",
            "command": "echo -e '============== BUILD END ==============='",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "RUNPROMPT",
            "command": "echo -e '============ PROGRAM START ============='",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "type": "shell",
            "label": "BUILD and RUN",
            "dependsOn": [
                "STARTPROMPT",
                "BUILD",
                "ENDPROMPT",
                "RUNPROMPT",
                "RUN"
            ],
            "dependsOrder": "sequence",
            "command": "echo -e '============= PROGRAM END =============='",
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "echo",
            "type": "shell",
            "command": "echo \"${fileDirname}\""
        }
    ],
    "version": "2.0.0"
}